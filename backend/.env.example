# Example environment variables for production
# Copy this file to .env and fill in your actual values

NODE_ENV=production
PORT=5000

# MongoDB Atlas Connection String
# Get this from MongoDB Atlas → Database → Connect → Connect your application
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/felicity?retryWrites=true&w=majority

# JWT Secret (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters

# JWT Expiration (30d = 30 days, recommended for event management systems)
JWT_EXPIRE=30d

# CORS Origins (Add your frontend URLs)
FRONTEND_URL=https://your-frontend-url.vercel.app
